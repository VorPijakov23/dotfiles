#!/bin/env bash

dir="${1:-.}"

if [[ ! -d "$dir" ]]; then
  echo "error: '$dir' not found"
  exit 1
fi

rus_regex='[А-Яа-яЁё]'

echo "Find in '$dir':"
find "$dir" -print0 | while IFS= read -r -d '' path; do
  name="$(basename "$path")"
  if [[ "$name" =~ $rus_regex ]]; then
    echo "\tIn name: $path"
  fi
done

grep --color=always -rI -n -e "$rus_regex" -- "$dir" 2>/dev/null || echo "NOT FOUND"

exit 0
